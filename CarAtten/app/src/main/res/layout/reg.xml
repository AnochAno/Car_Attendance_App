<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Reg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/shape">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/carno"
                android:background="@drawable/shape"
                android:hint="Car Number"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/baseline_directions_car_filled_24"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Drivername"
                android:background="@drawable/shape"
                android:hint="Driver's Name"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/baseline_person_24"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/nic"
                android:background="@drawable/shape"
                android:hint="Driver's NIC"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/baseline_credit_card_24"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/phone"
                android:background="@drawable/shape"
                android:hint="Driver's Phone No"
                android:padding="8dp"
                android:inputType="number"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/baseline_phone_24"
                />

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:textSize="25dp"
                android:id="@+id/save"
                android:textAlignment="center"
                android:background="@drawable/shape"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>